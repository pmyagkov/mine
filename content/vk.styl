.mine_download
  background-position: 0 -5px !important
  background-repeat: no-repeat !important
  width: 30px !important
  height: 22px !important
  padding: 0 !important
  margin: 4px 10px 0 0 !important
  display: none !important
  opacity: 0.8 !important

  &:hover
    opacity: 1 !important

  .audio:hover &
    display: block !important
    
.mine-bpm
  position: absolute
  top: 21px
  color: rgb(119, 119, 119)
  font-weight: bold

  #audio &
    top: 23px

  &::after
    margin-left: 3px
    content: 'kbps'
    font-weight: normal

  .audio.current &
    color: rgba(255,255,255,.8)

.audio
  & .info
    margin-top: -4px

  & .actions
    margin-top: 4px

    #audio &
      margin-top: 6px


#audio [data-mined] .area {
  padding-bottom: 2px !important
}

// на страницах профиля и сообщений иконка не должна вылезать
#profile [data-mined] .area,
#im_rows [data-mined] .area {
  margin-bottom: 0 !important
  padding-bottom: 10px !important
}
