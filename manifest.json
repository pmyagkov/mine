{
  "manifest_version": 2,
  "name": "Mine",
  "version": "0.0.6",

  "description": "Mine extension allows you to download music from vk.com",

  "browser_action": {},

  "content_scripts": [
    {
      "matches": ["http://vk.com/*", "https://vk.com/*"],
      "js": ["vk.js"],
      "css": ["vk.css"],
      "run_at": "document_start"
    }
  ],

  "icons": {
    "16": "images/logo_16.png",
    "48": "images/logo_48.png",
    "128": "images/logo_128.png"
  },

  "author": "pmyagkov",
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "permissions": [
    "tabs",
    "downloads",
    "storage",
    "http://*.vk-cdn.net/*",
    "https://*.vk-cdn.net/*",
    "http://*.vk.me/*",
    "https://*.vk.me/*",
    "https://vk.com/*",
    "http://vk.com/*"
  ],
  "web_accessible_resources": [
    "images/*"
  ]
}
